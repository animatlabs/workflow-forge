{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "WorkflowForge": "Information"
    }
  },
  "WorkflowForge": {
    "MaxConcurrentWorkflows": 10,
    "MaxConcurrentOperations": 0,
    "WorkflowTimeout": "00:05:00",
    "OperationTimeout": "00:00:30",
    "Middleware": {
      "Timing": {
        "Enabled": true,
        "IncludeDetailedTimings": false
      },
      "Logging": {
        "Enabled": true,
        "MinimumLevel": "Information",
        "LogDataPayloads": false
      },
      "ErrorHandling": {
        "Enabled": true,
        "RethrowExceptions": true,
        "IncludeStackTraces": true
      }
    }
  },
  "WorkflowForge:Extensions:Audit": {
    "Enabled": false,
    "DetailLevel": "Standard",
    "LogDataPayloads": false,
    "IncludeTimestamps": true,
    "IncludeUserContext": true
  },
  "WorkflowForge:Extensions:Validation": {
    "Enabled": true,
    "ThrowOnValidationError": true,
    "LogValidationErrors": true,
    "StoreValidationResults": true,
    "IgnoreValidationFailures": false
  },
  "WorkflowForge:Extensions:Persistence": {
    "Enabled": false,
    "PersistOnOperationComplete": true,
    "PersistOnWorkflowComplete": true,
    "PersistOnFailure": true,
    "MaxVersions": 0
  },
  "WorkflowForge:Extensions:Recovery": {
    "Enabled": false,
    "MaxRetryAttempts": 3,
    "BaseDelay": "00:00:01",
    "UseExponentialBackoff": true
  },
  "WorkflowForge:Extensions:Polly": {
    "Enabled": false,
    "EnableComprehensivePolicies": false,
    "EnableDetailedLogging": true,
    "DefaultTags": {
      "environment": "development",
      "application": "workflowforge-samples"
    },
    "Retry": {
      "IsEnabled": true,
      "MaxRetryAttempts": 3,
      "BaseDelay": "00:00:01",
      "BackoffType": "Exponential",
      "UseJitter": true
    },
    "CircuitBreaker": {
      "IsEnabled": false,
      "FailureThreshold": 5,
      "BreakDuration": "00:00:30",
      "SamplingDuration": "00:00:30",
      "MinimumThroughput": 10
    },
    "Timeout": {
      "IsEnabled": true,
      "DefaultTimeout": "00:00:30",
      "UseOptimisticTimeout": true
    },
    "RateLimiter": {
      "IsEnabled": false,
      "PermitLimit": 100,
      "Window": "00:01:00",
      "QueueLimit": 0
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "WorkflowForge": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/workflowforge-samples-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}
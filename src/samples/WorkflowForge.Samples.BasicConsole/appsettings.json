{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "WorkflowForge": "Information"
        }
    },
    "WorkflowForge": {
        "AutoRestore": true,
        "MaxConcurrentOperations": 4,
        "Polly": {
            "IsEnabled": true,
            "EnableComprehensivePolicies": false,
            "EnableDetailedLogging": true,
            "DefaultTags": {
                "environment": "development",
                "application": "workflowforge-samples"
            },
            "Retry": {
                "IsEnabled": true,
                "MaxRetryAttempts": 3,
                "BaseDelay": "00:00:01",
                "MaxDelay": "00:00:30",
                "UseJitter": true
            },
            "CircuitBreaker": {
                "IsEnabled": false,
                "FailureThreshold": 5,
                "DurationOfBreak": "00:00:30",
                "MinimumThroughput": 10
            },
            "Timeout": {
                "IsEnabled": true,
                "TimeoutDuration": "00:02:00"
            },
            "RateLimiter": {
                "IsEnabled": false,
                "PermitLimit": 10,
                "Window": "00:00:01"
            }
        },
        "Performance": {
            "MaxDegreeOfParallelism": 4,
            "EnableObjectPooling": true,
            "MaxQueuedOperations": 1000,
            "BatchSize": 10,
            "EnableMemoryOptimization": true,
            "GarbageCollectionMode": "Balanced"
        }
    },
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning",
                "WorkflowForge": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/workflowforge-samples-.log",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 7,
                    "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj} {Properties:j}{NewLine}{Exception}"
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
    }
}